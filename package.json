{
	"name": "blog",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "concurrently \"bun run dev:next\" \"bun run dev:db\"",
		"dev:next": "next dev --turbo",
		"dev:db": "turso dev --db-file database.db --port 9797",
		"build": "next build",
		"start": "next start",
		"format": "oxfmt -c .config/.oxfmtrc.json .",
		"format:check": "oxfmt -c .config/.oxfmtrc.json --check .",
		"lint": "oxlint -c .config/.oxlintrc.json --type-aware --type-check --deny-warnings",
		"lint:fix": "oxlint -c .config/.oxlintrc.json --type-aware --type-check --fix",
		"format-and-lint": "bun run lint && bun run format:check",
		"format-and-lint:fix": "bun run lint:fix && bun run format",
		"generate:migration": "drizzle-kit generate",
		"run:migration": "drizzle-kit up",
		"postinstall": "lefthook install"
	},
	"dependencies": {
		"@headlessui/react": "^2.2.9",
		"@heroicons/react": "^2.2.0",
		"@intentui/icons": "^1.11.0",
		"@libsql/client": "^0.15.15",
		"@mdx-js/loader": "^3.1.1",
		"@mdx-js/mdx": "^3.1.1",
		"@mdx-js/react": "^3.1.1",
		"@monaco-editor/react": "^4.7.0",
		"@shikijs/rehype": "^3.20.0",
		"@t3-oss/env-nextjs": "^0.13.10",
		"@tailwindcss/postcss": "^4.1.18",
		"@tanstack/react-pacer": "^0.18.0",
		"arctic": "^3.7.0",
		"clsx": "^2.1.1",
		"drizzle-orm": "^0.45.1",
		"drizzle-zod": "^0.8.3",
		"framer-motion": "^12.23.26",
		"iron-session": "^8.0.4",
		"monaco-editor": "^0.55.1",
		"neverthrow": "^8.2.0",
		"next": "^16.1.0",
		"react": "^19.2.3",
		"react-aria-components": "^1.14.0",
		"react-dom": "^19.2.3",
		"react-error-boundary": "^6.0.0",
		"recharts": "^3.6.0",
		"remark-gfm": "^4.0.1",
		"remeda": "^2.32.0",
		"rss": "^1.2.2",
		"sharp": "^0.34.5",
		"shiki": "^3.20.0",
		"tailwind-merge": "^3.4.0",
		"tailwind-variants": "^3.2.2",
		"tailwindcss-react-aria-components": "^2.0.1",
		"turso": "^0.1.0",
		"tw-animate-css": "^1.4.0",
		"usehooks-ts": "^3.1.1",
		"zod": "^4.2.1"
	},
	"devDependencies": {
		"@types/js-yaml": "^4.0.9",
		"@types/mdx": "^2.0.13",
		"@types/node": "^22.19.3",
		"@types/react": "^19.2.7",
		"@types/react-dom": "^19.2.3",
		"@types/rss": "^0.0.32",
		"concurrently": "^9.1.0",
		"drizzle-kit": "^0.31.8",
		"js-yaml": "^4.1.1",
		"lefthook": "^2.0.12",
		"oxfmt": "^0.19.0",
		"oxlint": "^1.34.0",
		"oxlint-tsgolint": "^0.10.0",
		"postcss": "^8.5.6",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"@tailwindcss/oxide",
			"esbuild"
		]
	}
}
