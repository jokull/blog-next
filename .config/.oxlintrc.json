{
	"$schema": "../node_modules/oxlint/configuration_schema.json",
	"plugins": ["react", "jsx-a11y", "import", "typescript"],
	"env": {
		"browser": true,
		"es2024": true,
		"node": true
	},
	"settings": {
		"react": {
			"version": "19"
		}
	},
	"rules": {
		"typescript/consistent-type-imports": [
			"error",
			{
				"prefer": "type-imports",
				"disallowTypeAnnotations": false,
				"fixStyle": "separate-type-imports"
			}
		],
		"typescript/no-non-null-assertion": "off",
		"no-param-reassign": "warn",
		"eslint/arrow-body-style": ["error", "as-needed"],
		"react/rules-of-hooks": "error",
		"react/exhaustive-deps": "error",
		"no-unused-vars": [
			"error",
			{
				"args": "none",
				"ignoreRestSiblings": true,
				"argsIgnorePattern": "^_",
				"varsIgnorePattern": "^_",
				"caughtErrors": "none"
			}
		],
		"typescript/no-explicit-any": "off",
		"react/no-array-index-key": "warn",
		"no-console": "warn",
		"react/no-danger": "warn",
		"jsx-a11y/no-svg-without-title": "off",
		"jsx-a11y/anchor-is-valid": "off",
		"react/no-img-element": "off",
		"react/no-children-prop": "off",
		"react/self-closing-comp": "error",
		"import/no-duplicates": "error",
		"typescript/no-unsafe-argument": "error",
		"typescript/no-unsafe-assignment": "error",
		"typescript/no-unsafe-call": "error",
		"typescript/no-unsafe-member-access": "error",
		"typescript/no-unsafe-return": "error",
		"typescript/no-unsafe-enum-comparison": "error",
		"typescript/await-thenable": "error",
		"typescript/no-for-in-array": "error",
		"typescript/no-implied-eval": "error",
		"typescript/no-misused-promises": "error",
		"typescript/no-unnecessary-type-assertion": "error",
		"typescript/restrict-plus-operands": "error",
		"typescript/restrict-template-expressions": "error",
		"typescript/no-confusing-void-expression": "warn",
		"typescript/no-meaningless-void-operator": "error",
		"typescript/no-mixed-enums": "error",
		"typescript/no-redundant-type-constituents": "error",
		"typescript/no-unnecessary-boolean-literal-compare": "warn",
		"typescript/no-unnecessary-condition": "warn",
		"typescript/no-unnecessary-type-arguments": "warn",
		"typescript/prefer-includes": "error",
		"typescript/prefer-nullish-coalescing": "warn",
		"typescript/prefer-optional-chain": "off",
		"typescript/prefer-return-this-type": "error",
		"typescript/prefer-string-starts-ends-with": "error",
		"typescript/require-array-sort-compare": "error",
		"typescript/no-array-delete": "error",
		"typescript/no-duplicate-type-constituents": "error",
		"typescript/no-useless-template-literals": "error",
		"typescript/prefer-find": "error",
		"typescript/use-unknown-in-catch-callback-variable": "error"
	},
	"categories": {
		"correctness": "warn"
	},
	"ignorePatterns": ["node_modules", ".next", "out", "dist", "build", ".turbo"]
}
